ðŸ”¹ Create Table
CREATE TABLE Application (
    Application_ID INT PRIMARY KEY,
    Student_ID INT,
    Drive_ID INT,
    Applied_Date DATE,
    Status VARCHAR(20),
    FOREIGN KEY (Student_ID) REFERENCES Student(Student_ID),
    FOREIGN KEY (Drive_ID) REFERENCES Placement_Drive(Drive_ID)
);
