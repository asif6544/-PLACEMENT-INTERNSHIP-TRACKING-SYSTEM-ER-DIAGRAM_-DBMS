ðŸ”¹ 1. Show all students
SELECT * FROM Student;
ðŸ”¹ 2. Students with CGPA > 8
SELECT * FROM Student WHERE CGPA > 8;
ðŸ”¹ 3. Show placements with company name
SELECT p.Placement_ID, c.Company_Name, p.Job_Role, p.Package
FROM Placement p
JOIN Company c ON p.Company_ID = c.Company_ID;
ðŸ”¹ 4. Show student applications with status
SELECT s.Name, a.Mode_of_Application, a.Status
FROM Application a
JOIN Student s ON a.Student_ID = s.Student_ID;
ðŸ”¹ 5. Show shortlisted students
SELECT s.Name, a.Status
FROM Application a
JOIN Student s ON a.Student_ID = s.Student_ID
WHERE a.Status = 'Shortlisted';
ðŸ”¹ 6. Show internships with company name
SELECT i.Internship_ID, c.Company_Name, i.Internship_Role, i.Stipend
FROM Internship i
JOIN Company c ON i.Company_ID = c.Company_ID;
ðŸ”¹ 7. Show internships with stipend greater than 10000
SELECT Internship_Role, Stipend
FROM Internship
WHERE Stipend > 10000;
ðŸ”¹ 8. Show highest placement package
SELECT MAX(Package) AS Highest_Package
FROM Placement;
ðŸ”¹ 9. Count total students in each department
SELECT Department, COUNT(*) AS Total_Students
FROM Student
GROUP BY Department;
ðŸ”¹ 10. Show companies in IT Services industry
SELECT Company_Name, Location
FROM Company
WHERE Industry_Type = 'IT Services';
